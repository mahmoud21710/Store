@model IEnumerable<IdentityRole> 
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<hr />
<partial name="RoleFormPartialView" model="new RoleFormViewModel()" />

@if(Model.Count() >0 )
{
    <table class="table table-striped table-hover" >
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(Random=>Random.Id)</th>
                <th>@Html.DisplayNameFor(Random=>Random.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var role in Model)
            {
                <tr>
                    <td>
                        @role.Id
                    </td>
                    <td>
                        @role.Name
                    </td>
                    <td><a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                    <a class="btn btn-outline-warning" asp-action="Delete" asp-route-id="@role.Id">Delete</a></td>
                </tr>

            }
        </tbody>
    </table>
} 
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There are No Roles</h2>
    </div>
}
@section scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
