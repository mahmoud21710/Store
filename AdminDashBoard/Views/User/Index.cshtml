@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All User</h1>
<hr />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(User => User.UserName)</th>
                <th>@Html.DisplayNameFor(User => User.DisplayName)</th>
                <th>@Html.DisplayNameFor(User => User.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(User => User.Email)</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.DisplayName</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Email</td>
                    <td>@string.Join(",",user.Roles.ToList())</td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There are No Users</h2>
    </div>
}
@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}

